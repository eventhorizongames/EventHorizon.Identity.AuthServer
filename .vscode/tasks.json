{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/EventHorizon.Identity.AuthServer.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }
            },
            "label": "initDB",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "/initdb"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "http://authserver.com:5555"
                }
            },
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}