@model List<IdentityServer4.EntityFramework.Entities.ApiResource>


<div>
    <h3>Api Resource</h3>
@if (Model.Any())
{
    <ul>
    @foreach (var apiResource in Model)
    {
        <li>
            <form method="POST" asp-route-id="@apiResource.Name" asp-action="Delete">
                @(apiResource.Name + " (" + apiResource.DisplayName + ")")
                <a asp-controller="Resource" asp-action="Edit" asp-route-id="@apiResource.Name">Edit</a>
                <button class="btn btn-link" type="submit">Delete</button>
            </form>
        </li>
    }
    </ul>
}
    <form method="POST" asp-controller="Resource" asp-action="Create">
        <div class="form-group">
            <label for="Name">New Name</label>
            <input name="Name" class="form-control" placeholder="New Name" />                    
        </div>
        <div class="form-group">
            <label for="DisplayName">New Display Name</label>
            <input name="DisplayName" class="form-control" placeholder="New Display Name" />                    
        </div>
        <button class="btn btn-default" type="submit">Create</button>
    </form>
</div>